@model ePasieka.Models.CalendarEvent

@{
    ViewData["Title"] = "Edycja wydarzenia";
}

@section scripts{
  <partial name="_CalendarPartial.cshtml" />
}

<h1>Edycja wydarzenia</h1>
<div class="row">
    <div class="col-md-4 bgcolor-boot-col">
        <form asp-action="EditCalendarEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="calendarEventID" />
            <div class="form-group">
                <label asp-for="title" class="control-label">Opis</label>
                <textarea asp-for="title" rows="4" class="form-control"></textarea>
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="start" class="control-label">Data rozpoczęcia</label>
                <input asp-for="start" id="startCalendarEvent" type="datetime-local" min="2000-01-01T00:00" max="2200-01-01T00:00" class="form-control" />
                <span asp-validation-for="start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="end" class="control-label">Data zakończenia</label>
                <input asp-for="end" id="endCalendarEvent" type="datetime-local" min="2000-01-01T00:00" max="2200-01-01T00:00" class="form-control" />
                <span asp-validation-for="end" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="color" class="control-label">Wybierz kolor wydarzenia: </label>
                <input type="color" asp-for="color">
                <span asp-validation-for="color" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="allDay" /> Czy to wydarzenie całodobowe?
                </label>
            </div>
            <div class="form-group">
                <input asp-for="userID" type="hidden" />
                <input type="submit" value="Zapisz" class="btn btn-primary" style="width: 48%;"/>
                <a asp-action="List" class="btn btn-primary" style="width: 48%;">Powrót</a>
            </div>
        </form>
    </div>
    <div class="col-md-8 bgcolor-boot-col">
        <div id="calendar"></div>
    </div>
</div>

<script src="~/fullcalendar/Calendar.js"></script>

